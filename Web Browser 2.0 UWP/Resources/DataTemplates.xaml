<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Tab Header Template-->
    <DataTemplate x:Key="TabHeaderTemplate">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Image Source="{Binding TabHeaderFavicon}"
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   Width="16" Height="16"/>
            <TextBlock Text="{Binding TabHeaderTitle}" VerticalAlignment="Center" HorizontalAlignment="Left"
                       Margin="10,0,0,0" />
        </StackPanel>
    </DataTemplate>
    
    <!--History List View Item-->
    <DataTemplate x:Key="SmallHistoryDataTemplate">
        <Grid MaxHeight="28" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="28" />
                <ColumnDefinition/>
                <ColumnDefinition Width="28"/>
            </Grid.ColumnDefinitions>

            <Image Width="20" Source="Assets/StoreLogo.png" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <TextBlock Text="{Binding Title}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0" />
            <FontIcon Width="20" Grid.Column="2" FontFamily="Segoe MDL2 Assets" Glyph="&#xE76C;" FontSize="10"/>
            
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>
